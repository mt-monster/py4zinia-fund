# 基金分析系统环境变量配置示例
# 复制此文件为 .env 并填写实际值

# ==================== 数据源配置 ====================
# Tushare Token (必填)
TUSHARE_TOKEN=5ff19facae0e5b26a407d491d33707a9884a39a714a0d76b6495725b

# Tushare 请求配置
TUSHARE_TIMEOUT=30
TUSHARE_RETRIES=3

# Akshare 请求配置
AKSHARE_TIMEOUT=30
AKSHARE_RETRIES=3
AKSHARE_DELAY=1.0

# 备用数据源配置
SINA_ENABLED=True
EASTMONEY_ENABLED=True
FALLBACK_TIMEOUT=10

# ==================== 数据库配置 ====================
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=root
DB_NAME=fund_analysis
DB_PORT=3306
DB_CHARSET=utf8mb4

# ==================== 通知配置 ====================
# 微信推送配置
WECHAT_ENABLED=True
WECHAT_TOKEN=your_wechat_token_here

# 邮件推送配置
EMAIL_ENABLED=True
EMAIL_TOKEN=your_email_token_here
EMAIL_CHANNEL=mail

# SMTP配置 (当 EMAIL_CHANNEL=smtp 时需要)
SMTP_HOST=smtp.qq.com
SMTP_PORT=465
SMTP_USER=your_email@qq.com
SMTP_PASSWORD=your_smtp_password
SMTP_RECEIVERS=receiver1@example.com,receiver2@example.com

# ==================== 应用配置 ====================
# 基金持仓文件路径
FUND_POSITION_FILE_PATH=京东金融.xlsx

# 报告输出目录
REPORT_DIR=./reports

# 无风险收益率 (用于夏普比率计算)
RISK_FREE_RATE=0.03

# ==================== 日志配置 ====================
# 日志级别: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# ==================== 开发配置 ====================
# 调试模式
DEBUG=False

# 端口配置
APP_PORT=5000