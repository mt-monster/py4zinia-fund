# =============================================================================
# 基金分析平台 - 环境变量配置模板
# =============================================================================
# 复制此文件为 .env 并填写实际值
# 或者设置系统环境变量
# =============================================================================

# =============================================================================
# 运行环境
# =============================================================================
FUND_ENV=development
# 可选值: development, testing, production, docker

# =============================================================================
# 数据库配置
# =============================================================================
FUND_DB_HOST=localhost
FUND_DB_PORT=3306
FUND_DB_USER=root
FUND_DB_PASSWORD=your_password_here
FUND_DB_NAME=fund_analysis
FUND_DB_CHARSET=utf8mb4
FUND_DB_POOL_SIZE=10
FUND_DB_POOL_TIMEOUT=30

# =============================================================================
# 缓存配置 (Redis)
# =============================================================================
FUND_CACHE_REDIS_HOST=localhost
FUND_CACHE_REDIS_PORT=6379
FUND_CACHE_REDIS_DB=0
# FUND_CACHE_REDIS_PASSWORD=your_redis_password
FUND_CACHE_DEFAULT_TTL=900
FUND_CACHE_MEMORY_CACHE_SIZE=1000

# =============================================================================
# 数据源配置
# =============================================================================
# Tushare Token (从 https://tushare.pro/ 获取)
TUSHARE_TOKEN=your_tushare_token_here

# 数据源超时配置
FUND_DS_TUSHARE_TIMEOUT=30
FUND_DS_AKSHARE_TIMEOUT=30
FUND_DS_FALLBACK_TIMEOUT=10

# 备用数据源开关
FUND_DS_FALLBACK_SINA_ENABLED=true
FUND_DS_FALLBACK_EASTMONEY_ENABLED=true

# =============================================================================
# 通知配置
# =============================================================================
# 微信通知 (PushPlus Token)
FUND_WECHAT_TOKEN=your_pushplus_token_here
FUND_WECHAT_ENABLED=true

# 邮件通知
FUND_EMAIL_ENABLED=false
FUND_EMAIL_SMTP_HOST=smtp.qq.com
FUND_EMAIL_SMTP_PORT=465
FUND_EMAIL_SMTP_USER=your_email@qq.com
FUND_EMAIL_SMTP_PASSWORD=your_smtp_password
# FUND_EMAIL_SMTP_RECEIVERS=receiver1@example.com,receiver2@example.com

# =============================================================================
# Web 应用配置
# =============================================================================
FUND_WEB_DEBUG=false
FUND_WEB_SECRET_KEY=your-secret-key-change-in-production
FUND_WEB_HOST=0.0.0.0
FUND_WEB_PORT=5001
FUND_WEB_TIMEZONE=Asia/Shanghai

# =============================================================================
# OCR 配置
# =============================================================================
# 百度 OCR (从 https://cloud.baidu.com/product/ocr 获取)
BAIDU_OCR_API_KEY=your_baidu_api_key
BAIDU_OCR_SECRET_KEY=your_baidu_secret_key
OCR_ENGINE=baidu
OCR_USE_GPU=false
OCR_CONFIDENCE_THRESHOLD=0.5

# =============================================================================
# Celery 配置
# =============================================================================
# 开发环境使用内存模式
FUND_CELERY_BROKER_URL=memory://
FUND_CELERY_RESULT_BACKEND=cache+memory://
FUND_CELERY_WORKER_CONCURRENCY=4

# 生产环境使用 Redis
# FUND_CELERY_BROKER_URL=redis://localhost:6379/0
# FUND_CELERY_RESULT_BACKEND=redis://localhost:6379/0

# =============================================================================
# 系统配置
# =============================================================================
# 文件路径
FUND_POSITION_FILE=D:/codes/py4zinia/pro2/fund_search/京东金融.xlsx
FUND_REPORT_DIR=D:/coding/trae_project/py4zinia/pro2/reports

# 投资策略
FUND_BASE_INVESTMENT=1000.0
FUND_MAX_POSITIONS=10
FUND_RISK_TOLERANCE=0.05

# 性能配置
FUND_MAX_CONCURRENT=5
FUND_REQUEST_TIMEOUT=30
FUND_BATCH_SIZE=100

# =============================================================================
# 日志配置
# =============================================================================
FUND_LOG_LEVEL=INFO
FUND_LOG_FILE=fund_analysis.log
# FUND_LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# =============================================================================
# 策略配置
# =============================================================================
FUND_STRATEGY_RISK_FREE_RATE=0.03
FUND_STRATEGY_TRADING_DAYS=252
FUND_STRATEGY_HISTORICAL_DAYS=365
